@model List<Contact>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{}
<h1>Kontakty</h1>
<a class="btn btn-outline-primary" asp-controller="Contact" asp-action="Create">Dodaj kontakt</a>
<table class="table">
    <thead>
        <tr>
            <th>
                Imię
            </th>
            <th>
                Email
            </th>
            <th>
                Akcje
            </th>
            <th>
                Priorytet
            </th>

        </tr>
    </thead>
    <tbody>
        @foreach(var item in @Model)
        {
            <tr>
                <td>
                    @item.Name
                </td>
                <td>
                    @item.Email
                </td>
                <td>
                    @item.Priority.GetDisplayName()
                </td>

                <td>
                    <a asp-controller="Contact" asp-action="Update" asp-route-id="@item.Id" >Edytuj</a>
                    <a asp-controller="Contact" asp-action="Delete" asp-route-id="@item.Id">Usuń</a>
                    <a asp-controller="Contact" asp-action="Details" asp-route-id="@item.Id">Szczegóły</a>
                </td>
            </tr>
        }
    </tbody>
</table>
