@{
}
@model Birth

<h2>Wprowadź swoje dane:</h2>

<form asp-controller="Birth" asp-action="Index" method="post">
    <div class="form-group">
        <label for="Imie">Imię:</label>
        <input asp-for="Imie" class="form-control" />
    </div>
    <div class="form-group">
        <label for="DataUrodzenia">Data urodzenia:</label>
        <input asp-for="DataUrodzenia" type="date" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Sprawdź</button>
</form>

@if (ViewBag.Message != null)
{
    <div class="mt-4">
        <strong>@ViewBag.Message</strong>
    </div>
}